# Entorno de desarrollo (.env-developer)

# Configuraci√≥n general
DEBUG=''                          # True o False: activa el modo debug de Django
SECRET_KEY=  ''                   # Clave secreta de Django (mantener privada)
ALLOWED_HOSTS=''                  # Hosts permitidos, separados por comas (ej: localhost,127.0.0.1)

# CONFIGURACION BASE DATOS 

# MYSQL 
DB_ENGINE='django.db.backends.mysql'
DB_NAME='your_database_name'
DB_USER='root'
DB_PASSWORD='your_password'
DB_HOST='localhost'
