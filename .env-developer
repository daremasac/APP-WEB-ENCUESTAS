DB_PASSWORD_SQLSERVER='your_password'
DB_HOST_SQLSERVER='localhost'
DB_PORT_SQLSERVER='1433'

# POSTGRES
DB_ENGINE_POSTGRES='django.db.backends.postgresql'
DB_NAME_POSTGRES='your_database_name'
DB_USER_POSTGRES='postgres'
DB_PASSWORD_POSTGRES='your_password'
DB_HOST_POSTGRES='localhost'
DB_PORT_POSTGRES='5432'